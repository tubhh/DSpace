    <!-- JOURNAL CONFIGURATION -->
    <bean id="JournalExtraTitleMetadataGenerator"
        class="org.dspace.app.cris.integration.CRISExtraBasicMetadataGenerator">
        <property name="type" value="journals" />
        <property name="relatedMetadata" value="crisjournals.journalsname" />
        <property name="relatedInputformMetadata" value="dc_relation_ispartof"/>
    </bean>

    <bean id="JournalExtraIssnMetadataGenerator"
        class="org.dspace.app.cris.integration.CRISExtraBasicMetadataGenerator">
        <property name="type" value="journals" />
        <property name="relatedMetadata" value="crisjournals.journalsissn" />
        <property name="relatedInputformMetadata" value="dc_identifier_issn"/>
    </bean>

