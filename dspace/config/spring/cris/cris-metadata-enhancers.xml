<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd"
	default-autowire-candidates="*Service,*DAO,javax.sql.DataSource">

	<context:annotation-config /> <!-- allows us to use spring annotations in beans -->
	
	<bean class="org.dspace.app.cris.integration.CrisItemWrapper" id="org.dspace.content.ItemWrapperIntegration"/>

	<!-- CRIS Item enhanced metadata, used to add dynamically to the item information from linked
     CRIS entities as it was metadata of the item -->
	<bean class="org.dspace.app.cris.integration.CrisItemEnhancer">
		<property name="alias" value="author" />
		<property name="metadata">
			<list>
				<value>dc.contributor.author</value>
			</list>
		</property>
		<property name="clazz">
			<value>org.dspace.app.cris.model.ResearcherPage</value>
		</property>
		<property name="qualifiers2path">
			<map>
				<entry key="dept">
					<value>dept</value>
				</entry>
				<entry key="orcid">
					<value>orcid</value>
				</entry>
				<entry key="parentorg">
					<value>dept.parentorgunit</value>
				</entry>
				
			</map>
		</property>
	</bean>
	<bean class="org.dspace.app.cris.integration.CrisItemEnhancer">
		<property name="alias" value="project" />
		<property name="metadata">
			<list>
				<value>dc.relation</value>
			</list>
		</property>
		<property name="clazz">
			<value>org.dspace.app.cris.model.Project</value>
		</property>
		<property name="qualifiers2path">
			<map>
				<entry key="funder">
					<value>funder</value>
				</entry>
				<entry key="funderid">
					<value>funder.crossrefid</value>
				</entry>
				<entry key="grantno">
					<value>code</value>
				</entry>
				<entry key="awardURL">
					<value>awardURL</value>
				</entry>
				<entry key="projectURL">
					<value>projectURL</value>
				</entry>
				<entry key="fundingProgram">
					<value>fundingProgram</value>
				</entry>
				<entry key="openAire">
					<value>openaireid</value>
				</entry>
			</map>
		</property>
	</bean>	

	<bean class="org.dspace.app.cris.integration.CrisItemEnhancer">
		<property name="alias" value="journal" />
		<property name="metadata">
			<list>
				<value>dc.relation.ispartof</value>
			</list>
		</property>
		<property name="clazz">
			<value>org.dspace.app.cris.model.ResearchObject</value>
		</property>
		<property name="type">
			<value>journals</value>
		</property>				
		<property name="qualifiers2path">
			<map>
				<entry key="journalissn">
					<value>journalissn</value>
				</entry>
				<entry key="journaleissn">
					<value>journaleissn</value>
				</entry>				
			</map>
		</property>
	</bean>

	<!-- CRIS enhanced metadata, used to add dynamically to the CRIS entity information from linked
         CRIS entities as it was metadata of the current CRIS entity from clazz -->
	<bean class="org.dspace.app.cris.integration.CrisEnhancer">
		<property name="clazz">
			<value>org.dspace.app.cris.model.Project</value>
		</property>
		<property name="alias" value="principalinvestigator" />
		<property name="qualifiers2path">
			<map>
				<entry key="dept">
					<value>dept</value>
				</entry>
			</map>
		</property>
	</bean>
	
	<bean class="org.dspace.app.cris.integration.CrisEnhancer">
		<property name="clazz">
			<value>org.dspace.app.cris.model.Project</value>
		</property>
		<property name="alias" value="coinvestigators" />
		<property name="qualifiers2path">
			<map>
				<entry key="dept">
					<value>dept</value>
				</entry>
			</map>
		</property>
	</bean>
	
	<!-- CRIS nested enhanced metadata, used to add dynamically to the CRIS entity information from the nested
     CRIS entities as it was metadata of the current CRIS entity from clazz -->
	<bean class="org.dspace.app.cris.integration.CrisNestedEnhancer"
		scope="prototype">
		<property name="applicationService" ref="applicationService" />
		<property name="nestedClazz" value="org.dspace.app.cris.model.jdyna.RPNestedObject" />
		<property name="clazz">
			<value>org.dspace.app.cris.model.ResearcherPage</value>
		</property>
		<property name="alias" value="spoken" />
		<property name="qualifiers2path">
			<map>
				<entry key="spokenEN">
					<value>spokenEN</value>
				</entry>
				<entry key="spokenZH">
					<value>spokenZH</value>
				</entry>
			</map>
		</property>
	</bean>

	<bean class="org.dspace.app.cris.integration.CrisNestedEnhancer"
		scope="prototype">
		<property name="applicationService" ref="applicationService" />
		<property name="nestedClazz" value="org.dspace.app.cris.model.jdyna.RPNestedObject" />
		<property name="clazz">
			<value>org.dspace.app.cris.model.ResearcherPage</value>
		</property>
		<property name="alias" value="written" />
		<property name="qualifiers2path">
			<map>
				<entry key="writtenEN">
					<value>writtenEN</value>
				</entry>
				<entry key="writtenZH">
					<value>writtenZH</value>
				</entry>
			</map>
		</property>
	</bean>


	<bean class="org.dspace.app.cris.integration.CrisNestedEnhancer"
		scope="prototype">
		<property name="applicationService" ref="applicationService" />
		<property name="nestedClazz" value="org.dspace.app.cris.model.jdyna.ProjectNestedObject" />
		<property name="clazz">
			<value>org.dspace.app.cris.model.Project</value>
		</property>
		<property name="alias" value="grant" />
		<property name="qualifiers2path">
			<map>
				<entry key="agencies">
					<value>agencies</value>
				</entry>				
			</map>
		</property>
	</bean>
	

	<bean class="org.dspace.app.cris.integration.CrisNestedEnhancer"
		scope="prototype">
		<property name="applicationService" ref="applicationService" />
		<property name="nestedClazz" value="org.dspace.app.cris.model.jdyna.RPNestedObject" />
		<property name="clazz">
			<value>org.dspace.app.cris.model.ResearcherPage</value>
		</property>
		<property name="alias" value="affiliation" />
		<property name="qualifiers2path">
			<map>
				<entry key="department">
					<value>orgunit</value>
				</entry>
				<entry key="departmentrole">
					<value>role</value>
				</entry>
			</map>
		</property>
	</bean>
	
	<bean class="org.dspace.content.ItemEnhancer">
		<property name="alias" value="fulltext" />
		<property name="metadata">
			<list>
				<value>placeholder.placeholder.placeholder</value>
			</list>
		</property>
		<property name="generators">
			<list>				
			    <ref bean="enhancerFulltext"/>
			</list>
		</property>
	</bean>
	
	<bean class="org.dspace.content.ItemEnhancer">
		<property name="alias" value="creatorOrcid" />
		<property name="metadata">
			<list>
				<value>placeholder.placeholder.placeholder</value>
			</list>
		</property>
		<property name="generators">
			<list>				
			    <ref bean="enhancerOrcid"/>
			</list>
		</property>
	</bean>

	<bean class="org.dspace.content.ItemEnhancer">
		<property name="alias" value="creatorGND" />
		<property name="metadata">
			<list>
				<value>placeholder.placeholder.placeholder</value>
			</list>
		</property>
		<property name="generators">
			<list>				
			    <ref bean="enhancerAuthorGnd"/>
			</list>
		</property>
	</bean>

	<bean class="org.dspace.content.ItemEnhancer">
		<property name="alias" value="advisorGND" />
		<property name="metadata">
			<list>
				<value>placeholder.placeholder.placeholder</value>
			</list>
		</property>
		<property name="generators">
			<list>				
			    <ref bean="enhancerAdvisorGnd"/>
			</list>
		</property>
	</bean>

	<bean class="org.dspace.content.ItemEnhancer">
		<property name="alias" value="tuhhseriesid" />
		<property name="metadata">
			<list>
				<value>placeholder.placeholder.placeholder</value>
			</list>
		</property>
		<property name="generators">
			<list>				
			    <ref bean="enhancerTuhhSeries"/>
			</list>
		</property>
	</bean>

	<bean class="org.dspace.content.ItemEnhancer">
		<property name="alias" value="seriesref" />
		<property name="metadata">
			<list>
				<value>tuhh.relation.ispartofseries</value>
				<value>tuhh.relation.ispartofseriesnumber</value>
			</list>
		</property>
		<property name="generators">
			<list>
			    <ref bean="enhancerSeriesRef"/>
			</list>
		</property>
	</bean>

	<bean class="org.dspace.content.ItemEnhancer">
		<property name="alias" value="grantfulltext" />
		<property name="metadata">
			<list>
				<value>placeholder.placeholder.placeholder</value>
			</list>
		</property>
		<property name="generators">
			<list>				
			    <ref bean="enhancerPermissionFulltext"/>
			</list>
		</property>
	</bean>

	<bean class="org.dspace.content.ItemEnhancer">
		<property name="alias" value="languageiso639-1" />
		<property name="metadata">
			<list>
				<value>dc.language.iso</value>
			</list>
		</property>
		<property name="generators">
			<list>				
			    <ref bean="enhancerLanguageISO639-1MapConverter"/>
			</list>
		</property>
	</bean>	
	
	<!-- Used for literature OAI context -->
	<bean class="org.dspace.content.ItemEnhancer">
		<property name="alias" value="openairetype" />
		<property name="metadata">
			<list>
				<value>dc.type</value>
			</list>
		</property>
		<property name="generators">
			<list>
			    <ref bean="enhancerType-MapConverter"/>
			</list>
		</property>
	</bean>

	<!-- Used for CRIS Manager OAI context -->
	<bean class="org.dspace.content.ItemEnhancer">
		<property name="alias" value="openairecristype" />
		<property name="metadata">
			<list>
				<value>dc.type</value>
			</list>
		</property>
		<property name="generators">
			<list>
			    <ref bean="enhancerCrisType-MapConverter"/>
			</list>
		</property>
	</bean>

	<!-- Used for CRIS Manager OAI context -->
	<bean class="org.dspace.content.ItemEnhancer">
		<property name="alias" value="cerifentitytype" />
		<property name="metadata">
			<list>
				<value>dc.type</value>
			</list>
		</property>
		<property name="generators">
			<list>
			    <ref bean="enhancerCerifEntityType-MapConverter"/>
			</list>
		</property>
	</bean>
	
	<bean name="enhancerLanguageISO639-1MapConverter" class="org.dspace.content.integration.defaultvalues.MapConverterValueGenerator" >
		<property name="converter" ref="MapConverterLanguageISO639-1" />
	</bean>

	<bean name="enhancerType-MapConverter" class="org.dspace.content.integration.defaultvalues.MapConverterValueGenerator" >
		<property name="converter" ref="MapConverterType" />
	</bean>

	<bean name="enhancerCrisType-MapConverter" class="org.dspace.content.integration.defaultvalues.MapConverterValueGenerator" >
		<property name="converter" ref="MapConverterCrisType" />
	</bean>
	<bean name="enhancerCerifEntityType-MapConverter" class="org.dspace.content.integration.defaultvalues.MapConverterValueGenerator" >
		<property name="converter" ref="MapConverterCerifEntityType" />
	</bean>
	
	<bean name="MapConverterLanguageISO639-1"
		class="org.dspace.util.SimpleMapConverter" init-method="init">
		<constructor-arg
			value="enhancerLanguageISO639-1MapConverter" />
		<property name="converterNameFile"
			value="mapConverter-iso639-1.properties" />
		<property name="configurationService"
			ref="org.dspace.services.ConfigurationService" />
		<property name="defaultValue" value="@@ident@@" />
	</bean>

	<bean name="MapConverterType"
		class="org.dspace.util.SimpleMapConverter" init-method="init">
		<constructor-arg
			value="enhancerType-MapConverter" />
		<property name="converterNameFile"
			value="mapConverter-openaireType.properties" />
		<property name="configurationService"
			ref="org.dspace.services.ConfigurationService" />
		<property name="defaultValue" value="@@ident@@" />
	</bean>

	<bean name="MapConverterCrisType"
		class="org.dspace.util.SimpleMapConverter" init-method="init">
		<constructor-arg
			value="enhancerCrisType-MapConverter" />
		<property name="converterNameFile"
			value="mapConverter-openaireCrisType.properties" />
		<property name="configurationService"
			ref="org.dspace.services.ConfigurationService" />
		<property name="defaultValue" value="http://purl.org/coar/resource_type/c_18cf" />
	</bean>
		
	<bean name="MapConverterCerifEntityType"
		class="org.dspace.util.SimpleMapConverter" init-method="init">
		<constructor-arg
			value="enhancerCerifEntityType-MapConverter" />
		<property name="converterNameFile"
			value="mapConverter-cerifEntityType.properties" />
		<property name="configurationService"
			ref="org.dspace.services.ConfigurationService" />
		<property name="defaultValue" value="Publications" />
	</bean>	

	<bean name="enhancerFulltext" class="org.dspace.content.integration.defaultvalues.FulltextInfoGenerator"/>
	<bean name="enhancerPermissionFulltext" class="org.dspace.content.integration.defaultvalues.FulltextPermissionGenerator"/>
	<bean name="enhancerOrcid" class="org.dspace.content.integration.defaultvalues.OrcidAuthorityGenerator">
            <property name="applicationService" ref="applicationService" />
        </bean>
	<bean name="enhancerGnd" class="org.dspace.content.integration.defaultvalues.GNDAuthorityGenerator">
            <property name="applicationService" ref="applicationService" />
        </bean>
	<bean name="enhancerSeriesRef" class="org.dspace.content.integration.defaultvalues.SeriesRefGenerator">
            <property name="applicationService" ref="applicationService" />
        </bean>
	<bean name="enhancerAuthorGnd" class="org.dspace.content.integration.defaultvalues.GNDAuthorAuthorityGenerator">
            <property name="applicationService" ref="applicationService" />
        </bean>
	<bean name="enhancerAdvisorGnd" class="org.dspace.content.integration.defaultvalues.GNDAdvisorAuthorityGenerator">
            <property name="applicationService" ref="applicationService" />
        </bean>
	<bean name="enhancerTuhhSeries" class="org.dspace.content.integration.defaultvalues.TUHHSeriesIdGenerator">
            <property name="applicationService" ref="applicationService" />
        </bean>
</beans>
